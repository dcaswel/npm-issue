{
    "compilerOptions": {
        "importHelpers": true,
        "noEmitHelpers": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "lib": [ "esnext", "dom" , "dom.iterable", "webworker" ],
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2017",
        "allowJs": false,
        "typeRoots": ["./node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "go-modules/*": ["./go-modules/src/*"],
            "lti/*": ["./lti/src/*"],
            "dashboard/*": ["./dashboard/src/*"],
            "ngx/*": ["./angular/*"],
            "session-manager": ["../htdocs/session-manager"],
            "mocks": ["./mocks"],
            "mocks/*": ["./mocks/*"]
        }
    },
    "types": [
        "./typings"
    ],
    "exclude": [
        "./goreact"
    ]
}

